script Route124_EventScript_Chad2{
	msgbox("You look like someone who could handle\nthis little guy!")
	givemon(SPECIES_DREDNAW, 0, ITEM_WHITE_HERB, ITEM_CHERISH_BALL, 3, 0, MON_MALE, 0, 252, 0, 252, 0, 4, 31, 31, 31, 31, 31, 31, MOVE_AQUA_FANGS, MOVE_SHELL_SMASH, MOVE_ROCK_SLIDE, MOVE_JAW_LOCK, TRUE)
	bufferspeciesname(STR_VAR_1, SPECIES_DREDNAW)
	setvar(VAR_TEMP_TRANSFERRED_SPECIES, SPECIES_DREDNAW)
	playfanfare(MUS_OBTAIN_ITEM)
	message("{PLAYER} received an Drednaw!")
	waitmessage()
	waitfanfare()
	call(Common_EventScript_Nickname)
	msgbox("Drednaw's bites are really powerful.\pSo, be careful if you wanna pet it.", MSGBOX_AUTOCLOSE)
	msgbox("And this, too!")
	giveitem(ITEM_DREDNITE, 1)
	setflag(FLAG_ROUTE_124_BOSS_DEFEATED)
	msgbox("Holding Drednite,\nyour Drednaw will Mega Evolve!\pIt's bites will be even more powerful!", MSGBOX_AUTOCLOSE)
}

script Route124_EventScript_Chad{
    lock
    faceplayer
	if(defeated(TRAINER_SPENCER) &&
	   defeated(TRAINER_ROLAND) &&
	   defeated(TRAINER_JENNY_1) &&
	   defeated(TRAINER_GRACE) &&
	   defeated(TRAINER_LILA_AND_ROY_1) &&
	   defeated(TRAINER_DECLAN) &&
	   defeated(TRAINER_ISABELLA)){
		setflag(B_FLAG_NO_BAG_USE)
		trainerbattle_single(TRAINER_CHAD, Route124_Text_ChadIntro, Route124_Text_ChadDefeat, Route124_EventScript_Chad2)
		clearflag(B_FLAG_NO_BAG_USE)
	    msgbox("Holding Drednite,\nyour Drednaw will Mega Evolve!\pIt's bites will be even more powerful!", MSGBOX_AUTOCLOSE)
	}
	else{
		// before defeating every trainer here
		msgbox("Fufufufuâ€¦ I dive deep underwater!\pWho're you?\nYou want a battle?\pYou should beat everyone here then\ntry to challenge me!", MSGBOX_AUTOCLOSE)
	}
    release
    end
}